{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "CommonJS",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build/dll"
  },
  "exclude": ["test", "release/build", "release/app/dist", "build/dll"],
  "include": [
    "src/**/*.ts",
    "./tests/**/*.ts",
    "globals.d.ts",
    "Tests/Inventory/inventory.sheet.test.ts"
  ],
  "typedocOptions": {
    "entryPoints": ["src/"],
    "entryPointStrategy": "expand",
    "externalPattern": "tests/**/*.ts",
    "exclude": "**/*+(index|.test|.spec|.e2e).ts",
    "excludeExternals": true,
    "out": "docs"
  }
}
