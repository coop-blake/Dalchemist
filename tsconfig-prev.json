{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["dom", "es2021"],
    "outDir": "./src/electron/out",
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,

  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts", "./Globals.d.ts"],
  "typedocOptions": {
    "entryPoints": ["src/"],
    "entryPointStrategy": "expand",
    "externalPattern": "tests/**/*.ts",
    "exclude": "**/*+(index|.test|.spec|.e2e).ts",
    "excludeExternals": true,
    "out": "docs"
  }
}

